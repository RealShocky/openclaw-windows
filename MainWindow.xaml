<Window x:Class="OpenClawGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:pages="clr-namespace:OpenClawGUI.Pages"
        ui:WindowHelper.UseModernWindowStyle="True"
        Title="ðŸ¦ž OpenClaw - Personal AI Assistant" Height="800" Width="1400"
        WindowStartupLocation="CenterScreen"
        Background="#0D1117">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Navigation Sidebar -->
        <Border Grid.Column="0" Background="#161B22" BorderBrush="#30363D" BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Logo/Header -->
                <StackPanel Grid.Row="0" Margin="20,20,20,30">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="ðŸ¦ž" FontSize="32" VerticalAlignment="Center"/>
                        <TextBlock Text="OpenClaw" FontSize="22" FontWeight="Bold" Foreground="#58A6FF" 
                                   VerticalAlignment="Center" Margin="10,0,0,0"/>
                    </StackPanel>
                    <Border x:Name="StatusBorder" Background="#238636" CornerRadius="4" Padding="10,6">
                        <TextBlock x:Name="StatusText" Text="â— ONLINE" Foreground="#FFFFFF" 
                                   FontSize="12" FontWeight="SemiBold" TextAlignment="Center"/>
                    </Border>
                </StackPanel>

                <!-- Navigation Menu -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10,0">
                        <TextBlock Text="GATEWAY" Foreground="#8B949E" FontSize="10" FontWeight="Bold" Margin="10,10,10,10"/>
                        
                        <Button Content="â–¶ START" Click="StartGateway_Click"
                                Background="#21262D" Foreground="#C9D1D9" BorderBrush="#30363D" BorderThickness="1"
                                Padding="12,10" Margin="0,0,0,5" HorizontalAlignment="Stretch" FontWeight="SemiBold" FontSize="11"/>
                        
                        <Button Content="â¹ STOP" x:Name="StopGatewayButton" Click="StopGateway_Click"
                                Background="#21262D" Foreground="#C9D1D9" BorderBrush="#30363D" BorderThickness="1"
                                Padding="12,10" Margin="0,0,0,5" HorizontalAlignment="Stretch" FontWeight="SemiBold" FontSize="11"/>
                        
                        <Button Content="ðŸ”„ RESTART" Click="RestartGateway_Click"
                                Background="#21262D" Foreground="#C9D1D9" BorderBrush="#30363D" BorderThickness="1"
                                Padding="12,10" Margin="0,0,0,5" HorizontalAlignment="Stretch" FontWeight="SemiBold" FontSize="11"/>
                        
                        <Button Content="ðŸ” CHECK STATUS" Click="CheckStatus_Click"
                                Background="#21262D" Foreground="#C9D1D9" BorderBrush="#30363D" BorderThickness="1"
                                Padding="12,10" Margin="0,0,0,5" HorizontalAlignment="Stretch" FontWeight="SemiBold" FontSize="11"/>

                        <Separator Margin="0,15" Background="#21262D"/>

                        <TextBlock Text="MAIN" Foreground="#8B949E" FontSize="10" FontWeight="Bold" Margin="10,5,10,10"/>
                        
                        <Button x:Name="OverviewNavButton" Content="ðŸ“Š Overview" Click="NavigateToOverview_Click"
                                Background="#21262D" Foreground="#C9D1D9" BorderBrush="#30363D" BorderThickness="1"
                                Padding="12,10" Margin="0,0,0,5" HorizontalAlignment="Stretch" FontWeight="SemiBold" FontSize="12"/>
                        
                        <Button x:Name="ChatNavButton" Content="ðŸ’¬ Chat" Click="NavigateToChat_Click"
                                Background="#1F6FEB" Foreground="White" BorderThickness="0"
                                Padding="12,10" Margin="0,0,0,5" HorizontalAlignment="Stretch" FontWeight="SemiBold" FontSize="12"/>
                        
                        <Button x:Name="SessionsNavButton" Content="ðŸ“‚ Sessions" Click="NavigateToSessions_Click"
                                Background="#21262D" Foreground="#C9D1D9" BorderBrush="#30363D" BorderThickness="1"
                                Padding="12,10" Margin="0,0,0,5" HorizontalAlignment="Stretch" FontWeight="SemiBold" FontSize="12"/>

                        <Separator Margin="0,10" Background="#21262D"/>
                        <TextBlock Text="AGENTS" Foreground="#8B949E" FontSize="10" FontWeight="Bold" Margin="10,5,10,10"/>
                        
                        <Button x:Name="AgentsNavButton" Content="ðŸ¤– Agents" Click="NavigateToAgents_Click"
                                Background="#21262D" Foreground="#C9D1D9" BorderBrush="#30363D" BorderThickness="1"
                                Padding="12,10" Margin="0,0,0,5" HorizontalAlignment="Stretch" FontWeight="SemiBold" FontSize="12"/>
                        
                        <Button x:Name="SkillsNavButton" Content="ðŸ› ï¸ Skills" Click="NavigateToSkills_Click"
                                Background="#21262D" Foreground="#C9D1D9" BorderBrush="#30363D" BorderThickness="1"
                                Padding="12,10" Margin="0,0,0,5" HorizontalAlignment="Stretch" FontWeight="SemiBold" FontSize="12"/>

                        <Separator Margin="0,10" Background="#21262D"/>
                        <TextBlock Text="CONTROL" Foreground="#8B949E" FontSize="10" FontWeight="Bold" Margin="10,5,10,10"/>
                        
                        <Button x:Name="ChannelsNavButton" Content="ðŸ“¡ Channels" Click="NavigateToChannels_Click"
                                Background="#21262D" Foreground="#C9D1D9" BorderBrush="#30363D" BorderThickness="1"
                                Padding="12,10" Margin="0,0,0,5" HorizontalAlignment="Stretch" FontWeight="SemiBold" FontSize="12"/>
                        
                        <Button x:Name="UsageNavButton" Content="ðŸ“ˆ Usage" Click="NavigateToUsage_Click"
                                Background="#21262D" Foreground="#C9D1D9" BorderBrush="#30363D" BorderThickness="1"
                                Padding="12,10" Margin="0,0,0,5" HorizontalAlignment="Stretch" FontWeight="SemiBold" FontSize="12"/>
                        
                        <Button x:Name="CronNavButton" Content="â° Cron" Click="NavigateToCron_Click"
                                Background="#21262D" Foreground="#C9D1D9" BorderBrush="#30363D" BorderThickness="1"
                                Padding="12,10" Margin="0,0,0,5" HorizontalAlignment="Stretch" FontWeight="SemiBold" FontSize="12"/>
                        
                        <Button x:Name="NodesNavButton" Content="ðŸ”— Nodes" Click="NavigateToNodes_Click"
                                Background="#21262D" Foreground="#C9D1D9" BorderBrush="#30363D" BorderThickness="1"
                                Padding="12,10" Margin="0,0,0,5" HorizontalAlignment="Stretch" FontWeight="SemiBold" FontSize="12"/>
                        
                        <Button x:Name="InstancesNavButton" Content="ðŸ–¥ï¸ Instances" Click="NavigateToInstances_Click"
                                Background="#21262D" Foreground="#C9D1D9" BorderBrush="#30363D" BorderThickness="1"
                                Padding="12,10" Margin="0,0,0,5" HorizontalAlignment="Stretch" FontWeight="SemiBold" FontSize="12"/>

                        <Separator Margin="0,10" Background="#21262D"/>
                        <TextBlock Text="SETTINGS" Foreground="#8B949E" FontSize="10" FontWeight="Bold" Margin="10,5,10,10"/>
                        
                        <Button x:Name="ModelsNavButton" Content="ï¿½ Models" Click="NavigateToModels_Click"
                                Background="#21262D" Foreground="#C9D1D9" BorderBrush="#30363D" BorderThickness="1"
                                Padding="12,10" Margin="0,0,0,5" HorizontalAlignment="Stretch" FontWeight="SemiBold" FontSize="12"/>
                        
                        <Button x:Name="SettingsNavButton" Content="âš™ï¸ Settings" Click="NavigateToSettings_Click"
                                Background="#21262D" Foreground="#C9D1D9" BorderBrush="#30363D" BorderThickness="1"
                                Padding="12,10" Margin="0,0,0,5" HorizontalAlignment="Stretch" FontWeight="SemiBold" FontSize="12"/>
                        
                        <Button x:Name="LogsNavButton" Content="ðŸ“ Logs" Click="NavigateToLogs_Click"
                                Background="#21262D" Foreground="#C9D1D9" BorderBrush="#30363D" BorderThickness="1"
                                Padding="12,10" Margin="0,0,0,5" HorizontalAlignment="Stretch" FontWeight="SemiBold" FontSize="12"/>
                        
                        <Button x:Name="DebugNavButton" Content="ðŸ› Debug" Click="NavigateToDebug_Click"
                                Background="#21262D" Foreground="#C9D1D9" BorderBrush="#30363D" BorderThickness="1"
                                Padding="12,10" Margin="0,0,0,5" HorizontalAlignment="Stretch" FontWeight="SemiBold" FontSize="12"/>
                    </StackPanel>
                </ScrollViewer>

                <!-- Bottom Info -->
                <Border Grid.Row="2" Background="#0D1117" Padding="15,10" BorderBrush="#30363D" BorderThickness="0,1,0,0">
                    <StackPanel>
                        <TextBlock x:Name="ModelInfo" Text="Model: Loading..." Foreground="#7D8590" FontSize="11" Margin="0,0,0,5"/>
                        <TextBlock x:Name="StatusBarText" Text="Ready" Foreground="#7D8590" FontSize="10"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Border Grid.Column="1" Background="#0D1117">
            <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
        </Border>
    </Grid>
</Window>
