<UserControl x:Class="OpenClawGUI.Pages.SkillsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             Background="#0D1117"
             Loaded="Page_Loaded">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="SKILLS" FontSize="24" FontWeight="Bold" Foreground="#E6EDF3" Margin="0,0,0,5"/>
            <TextBlock Text="Configure agent capabilities and tools" FontSize="14" Foreground="#7D8590" Margin="0,0,0,20"/>
            
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="SearchBox" Width="300" Margin="0,0,15,0" TextChanged="SearchBox_TextChanged"
                         Background="#0D1117" Foreground="#E6EDF3" BorderBrush="#30363D" Padding="10"
                         Text="" ui:ControlHelper.PlaceholderText="Search skills..."/>
                <Button Content="ðŸ”„ Refresh" Click="Refresh_Click"
                        Background="#238636" Foreground="White" BorderThickness="0"
                        Padding="15,10" FontWeight="SemiBold"/>
            </StackPanel>
        </StackPanel>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="SkillsList">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#161B22" BorderBrush="#30363D" BorderThickness="1" CornerRadius="8" 
                                Padding="20" Margin="0,0,15,15" Width="350">
                            <StackPanel>
                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="{Binding Icon}" FontSize="24" Margin="0,0,10,0"/>
                                    <TextBlock Grid.Column="1" Text="{Binding Name}" FontSize="16" FontWeight="Bold" Foreground="#E6EDF3" VerticalAlignment="Center"/>
                                    <CheckBox Grid.Column="2" IsChecked="{Binding IsEnabled}" Click="ToggleSkill_Click" 
                                              Tag="{Binding Id}" VerticalAlignment="Center"/>
                                </Grid>
                                <TextBlock Text="{Binding Description}" Foreground="#7D8590" TextWrapping="Wrap" Margin="0,0,0,10"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Border Grid.Column="0" Background="{Binding StatusColor}" CornerRadius="4" Padding="8,4" HorizontalAlignment="Left">
                                        <TextBlock Text="{Binding StatusText}" Foreground="White" FontSize="10" FontWeight="Bold"/>
                                    </Border>
                                    <Button Grid.Column="2" Content="âš™ï¸ Configure" Click="ConfigureSkill_Click" Tag="{Binding Id}"
                                            Background="#21262D" Foreground="#C9D1D9" BorderBrush="#30363D" BorderThickness="1"
                                            Padding="10,5" FontSize="11" Visibility="{Binding ConfigureVisibility}"/>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>
