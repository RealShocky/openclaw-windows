<UserControl x:Class="OpenClawGUI.Pages.SessionsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             Background="#0D1117">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="SESSIONS" FontSize="24" FontWeight="Bold" Foreground="#E6EDF3" Margin="0,0,0,10"/>
            <TextBlock Text="Manage your conversation sessions" FontSize="14" Foreground="#7D8590" Margin="0,0,0,20"/>
            <StackPanel Orientation="Horizontal">
                <Button Content="âž• NEW SESSION" Click="NewSession_Click"
                        Background="#238636" Foreground="White" BorderThickness="0"
                        Padding="15,10" Margin="0,0,10,0" FontWeight="SemiBold" FontSize="13"/>
                <Button Content="ðŸ”„ REFRESH" Click="Refresh_Click"
                        Background="#21262D" Foreground="#C9D1D9" BorderBrush="#30363D" BorderThickness="1"
                        Padding="15,10" FontWeight="SemiBold" FontSize="13"/>
            </StackPanel>
        </StackPanel>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="SessionsList">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#161B22" BorderBrush="#30363D" BorderThickness="1"
                                CornerRadius="6" Margin="0,0,0,10" Padding="15">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="{Binding Name}" FontSize="16" FontWeight="SemiBold" Foreground="#E6EDF3"/>
                                    <TextBlock Text="{Binding Created}" FontSize="12" Foreground="#7D8590" Margin="0,5,0,0"/>
                                    <TextBlock Text="{Binding MessageCount}" FontSize="12" Foreground="#58A6FF" Margin="0,5,0,0"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                    <Button Content="ðŸ“‚ LOAD" Tag="{Binding Id}" Click="LoadSession_Click"
                                            Background="#21262D" Foreground="#C9D1D9" BorderBrush="#30363D"
                                            Padding="10,5" Margin="5,0" FontSize="11"/>
                                    <Button Content="ðŸ—‘ï¸ DELETE" Tag="{Binding Id}" Click="DeleteSession_Click"
                                            Background="#21262D" Foreground="#DA3633" BorderBrush="#30363D"
                                            Padding="10,5" Margin="5,0" FontSize="11"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>
