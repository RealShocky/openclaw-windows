<UserControl x:Class="OpenClawGUI.Pages.NodesPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             Background="#0D1117"
             Loaded="Page_Loaded">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="EXECUTION NODES" FontSize="24" FontWeight="Bold" Foreground="#E6EDF3" Margin="0,0,0,5"/>
            <TextBlock Text="Manage tool executions and approval requests" FontSize="14" Foreground="#7D8590" Margin="0,0,0,20"/>
            
            <StackPanel Orientation="Horizontal">
                <Button Content="âœ… APPROVE ALL" Click="ApproveAll_Click"
                        Background="#238636" Foreground="White" BorderThickness="0"
                        Padding="15,10" Margin="0,0,10,0" FontWeight="SemiBold" FontSize="13"/>
                <Button Content="âŒ DENY ALL" Click="DenyAll_Click"
                        Background="#DA3633" Foreground="White" BorderThickness="0"
                        Padding="15,10" Margin="0,0,10,0" FontWeight="SemiBold" FontSize="13"/>
                <Button Content="ðŸ”„ REFRESH" Click="Refresh_Click"
                        Background="#21262D" Foreground="#C9D1D9" BorderBrush="#30363D" BorderThickness="1"
                        Padding="15,10" FontWeight="SemiBold" FontSize="13"/>
            </StackPanel>
        </StackPanel>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Pending Approvals Section -->
                <Border Background="#161B22" BorderBrush="#30363D" BorderThickness="1" CornerRadius="8" Padding="20" Margin="0,0,0,20">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <TextBlock Text="â³ PENDING APPROVALS" FontSize="14" FontWeight="Bold" Foreground="#D29922"/>
                            <Border Background="#D29922" CornerRadius="10" Padding="8,2" Margin="10,0,0,0" VerticalAlignment="Center">
                                <TextBlock x:Name="PendingCount" Text="0" Foreground="White" FontSize="11" FontWeight="Bold"/>
                            </Border>
                        </StackPanel>
                        
                        <ItemsControl x:Name="PendingList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#0D1117" BorderBrush="#30363D" BorderThickness="1" 
                                            CornerRadius="6" Padding="15" Margin="0,0,0,10">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Grid.Column="0">
                                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                                    <TextBlock Text="{Binding Icon}" FontSize="18" Margin="0,0,8,0"/>
                                                    <TextBlock Text="{Binding ToolName}" FontSize="14" FontWeight="SemiBold" Foreground="#E6EDF3"/>
                                                </StackPanel>
                                                <TextBlock Text="{Binding Description}" Foreground="#7D8590" TextWrapping="Wrap" Margin="0,0,0,8"/>
                                                <TextBlock Text="{Binding Command}" Foreground="#58A6FF" FontFamily="Consolas" FontSize="12" 
                                                           TextWrapping="Wrap" Background="#21262D" Padding="8"/>
                                            </StackPanel>
                                            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="15,0,0,0">
                                                <Button Content="âœ…" Tag="{Binding Id}" Click="Approve_Click"
                                                        Background="#238636" Foreground="White" BorderThickness="0"
                                                        Padding="12,8" Margin="0,0,8,0" FontSize="14" ToolTip="Approve"/>
                                                <Button Content="âŒ" Tag="{Binding Id}" Click="Deny_Click"
                                                        Background="#DA3633" Foreground="White" BorderThickness="0"
                                                        Padding="12,8" FontSize="14" ToolTip="Deny"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        
                        <TextBlock x:Name="NoPendingText" Text="No pending approvals" Foreground="#7D8590" 
                                   HorizontalAlignment="Center" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Recent Executions Section -->
                <Border Background="#161B22" BorderBrush="#30363D" BorderThickness="1" CornerRadius="8" Padding="20">
                    <StackPanel>
                        <TextBlock Text="ðŸ“‹ RECENT EXECUTIONS" FontSize="14" FontWeight="Bold" Foreground="#58A6FF" Margin="0,0,0,15"/>
                        
                        <ItemsControl x:Name="RecentList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#0D1117" CornerRadius="4" Padding="12" Margin="0,0,0,8">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="{Binding StatusIcon}" FontSize="16" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                            <StackPanel Grid.Column="1">
                                                <TextBlock Text="{Binding ToolName}" Foreground="#E6EDF3" FontWeight="SemiBold"/>
                                                <TextBlock Text="{Binding Description}" Foreground="#7D8590" FontSize="12"/>
                                            </StackPanel>
                                            <Border Grid.Column="2" Background="{Binding StatusColor}" CornerRadius="4" Padding="8,4" Margin="10,0" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Status}" Foreground="White" FontSize="10" FontWeight="Bold"/>
                                            </Border>
                                            <TextBlock Grid.Column="3" Text="{Binding Time}" Foreground="#7D8590" FontSize="11" VerticalAlignment="Center"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
