<UserControl x:Class="OpenClawGUI.Pages.CronPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             Background="#0D1117"
             Loaded="Page_Loaded">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="SCHEDULED TASKS" FontSize="24" FontWeight="Bold" Foreground="#E6EDF3" Margin="0,0,0,5"/>
            <TextBlock Text="Automate recurring tasks with cron jobs" FontSize="14" Foreground="#7D8590" Margin="0,0,0,20"/>
            
            <StackPanel Orientation="Horizontal">
                <Button Content="âž• NEW TASK" Click="NewTask_Click"
                        Background="#238636" Foreground="White" BorderThickness="0"
                        Padding="15,10" Margin="0,0,10,0" FontWeight="SemiBold" FontSize="13"/>
                <Button Content="ðŸ”„ REFRESH" Click="Refresh_Click"
                        Background="#21262D" Foreground="#C9D1D9" BorderBrush="#30363D" BorderThickness="1"
                        Padding="15,10" FontWeight="SemiBold" FontSize="13"/>
            </StackPanel>
        </StackPanel>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Cron Jobs List -->
                <ItemsControl x:Name="CronJobsList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#161B22" BorderBrush="#30363D" BorderThickness="1"
                                    CornerRadius="8" Margin="0,0,0,15" Padding="20">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Header -->
                                    <Grid Grid.Row="0" Margin="0,0,0,15">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                                            <TextBlock Text="â°" FontSize="24" Margin="0,0,10,0"/>
                                            <StackPanel>
                                                <TextBlock Text="{Binding Name}" FontSize="18" FontWeight="Bold" Foreground="#E6EDF3"/>
                                                <TextBlock Text="{Binding Schedule}" FontSize="12" Foreground="#58A6FF" FontFamily="Consolas"/>
                                            </StackPanel>
                                        </StackPanel>
                                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                                            <Border Background="{Binding StatusColor}" CornerRadius="4" Padding="10,5" Margin="0,0,10,0">
                                                <TextBlock Text="{Binding Status}" Foreground="White" FontSize="11" FontWeight="SemiBold"/>
                                            </Border>
                                            <ToggleButton x:Name="EnableToggle" IsChecked="{Binding IsEnabled}" 
                                                          Content="{Binding EnableText}" Click="ToggleTask_Click" Tag="{Binding Id}"
                                                          Background="#21262D" Foreground="#C9D1D9" BorderBrush="#30363D"
                                                          Padding="10,5"/>
                                        </StackPanel>
                                    </Grid>

                                    <!-- Info -->
                                    <Grid Grid.Row="1" Margin="0,0,0,15">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="Last Run" FontSize="11" Foreground="#7D8590"/>
                                            <TextBlock Text="{Binding LastRun}" FontSize="13" Foreground="#E6EDF3"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="Next Run" FontSize="11" Foreground="#7D8590"/>
                                            <TextBlock Text="{Binding NextRun}" FontSize="13" Foreground="#238636" FontWeight="SemiBold"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="2">
                                            <TextBlock Text="Run Count" FontSize="11" Foreground="#7D8590"/>
                                            <TextBlock Text="{Binding RunCount}" FontSize="13" Foreground="#E6EDF3"/>
                                        </StackPanel>
                                    </Grid>

                                    <!-- Description & Actions -->
                                    <Grid Grid.Row="2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="{Binding Description}" Foreground="#7D8590" 
                                                   TextWrapping="Wrap" VerticalAlignment="Center"/>
                                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                                            <Button Content="â–¶ Run Now" Tag="{Binding Id}" Click="RunNow_Click"
                                                    Background="#238636" Foreground="White" BorderThickness="0"
                                                    Padding="12,8" Margin="0,0,10,0" FontSize="12"/>
                                            <Button Content="âœï¸ Edit" Tag="{Binding Id}" Click="EditTask_Click"
                                                    Background="#21262D" Foreground="#C9D1D9" BorderBrush="#30363D" BorderThickness="1"
                                                    Padding="12,8" Margin="0,0,10,0" FontSize="12"/>
                                            <Button Content="ðŸ—‘ï¸" Tag="{Binding Id}" Click="DeleteTask_Click"
                                                    Background="#21262D" Foreground="#DA3633" BorderBrush="#30363D" BorderThickness="1"
                                                    Padding="12,8" FontSize="12"/>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Empty State -->
                <Border x:Name="EmptyState" Background="#161B22" BorderBrush="#30363D" BorderThickness="1"
                        CornerRadius="8" Padding="40" HorizontalAlignment="Center" Visibility="Collapsed">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="â°" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                        <TextBlock Text="No Scheduled Tasks" FontSize="18" FontWeight="Bold" Foreground="#E6EDF3" 
                                   HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        <TextBlock Text="Create a cron job to automate recurring tasks" FontSize="14" Foreground="#7D8590"
                                   HorizontalAlignment="Center" Margin="0,0,0,20"/>
                        <Button Content="âž• Create First Task" Click="NewTask_Click"
                                Background="#238636" Foreground="White" BorderThickness="0"
                                Padding="20,10" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Cron Expression Help -->
                <Border Background="#161B22" BorderBrush="#30363D" BorderThickness="1" CornerRadius="8" Padding="20" Margin="0,20,0,0">
                    <StackPanel>
                        <TextBlock Text="ðŸ“– CRON EXPRESSION REFERENCE" FontSize="14" FontWeight="Bold" Foreground="#58A6FF" Margin="0,0,0,15"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="* * * * *" Foreground="#58A6FF" FontFamily="Consolas" Margin="0,0,0,8"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="Every minute" Foreground="#7D8590" Margin="0,0,0,8"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="0 * * * *" Foreground="#58A6FF" FontFamily="Consolas" Margin="0,0,0,8"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="Every hour" Foreground="#7D8590" Margin="0,0,0,8"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="0 9 * * *" Foreground="#58A6FF" FontFamily="Consolas" Margin="0,0,0,8"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="Every day at 9:00 AM" Foreground="#7D8590" Margin="0,0,0,8"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="0 9 * * 1-5" Foreground="#58A6FF" FontFamily="Consolas" Margin="0,0,0,8"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" Text="Weekdays at 9:00 AM" Foreground="#7D8590" Margin="0,0,0,8"/>

                            <TextBlock Grid.Row="4" Grid.Column="0" Text="0 0 1 * *" Foreground="#58A6FF" FontFamily="Consolas"/>
                            <TextBlock Grid.Row="4" Grid.Column="1" Text="First day of every month" Foreground="#7D8590"/>
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
