<UserControl x:Class="OpenClawGUI.Pages.ModelsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             Background="#0D1117">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="MODELS" FontSize="24" FontWeight="Bold" Foreground="#E6EDF3" Margin="0,0,0,10"/>
            <TextBlock Text="Available AI models from Ollama and LMStudio" FontSize="14" Foreground="#7D8590" Margin="0,0,0,20"/>
            
            <StackPanel Orientation="Horizontal">
                <Button Content="ðŸ”„ REFRESH OLLAMA" Click="RefreshOllama_Click"
                        Background="#238636" Foreground="White" BorderThickness="0"
                        Padding="15,10" Margin="0,0,10,0" FontWeight="SemiBold" FontSize="13"/>
                <Button Content="ðŸ”„ REFRESH LMSTUDIO" Click="RefreshLMStudio_Click"
                        Background="#1F6FEB" Foreground="White" BorderThickness="0"
                        Padding="15,10" FontWeight="SemiBold" FontSize="13"/>
            </StackPanel>
        </StackPanel>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="OLLAMA MODELS" FontSize="18" FontWeight="Bold" Foreground="#58A6FF" Margin="0,0,0,15"/>
                <ItemsControl x:Name="OllamaModelsList" Margin="0,0,0,30">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#161B22" BorderBrush="#30363D" BorderThickness="1"
                                    CornerRadius="6" Margin="0,0,0,10" Padding="15">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding Name}" FontSize="16" FontWeight="SemiBold" Foreground="#E6EDF3"/>
                                        <TextBlock Text="{Binding Size}" FontSize="12" Foreground="#7D8590" Margin="0,5,0,0"/>
                                        <TextBlock Text="{Binding Modified}" FontSize="12" Foreground="#7D8590" Margin="0,2,0,0"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                                        <Button Content="â­ SET PRIMARY" Click="SetAsPrimary_Click"
                                                Background="#D29922" Foreground="White" BorderThickness="0"
                                                Padding="12,8" Margin="0,0,8,0" FontWeight="SemiBold" FontSize="11"/>
                                        <Button Content="âœ“ SELECT" Tag="{Binding Name}" Click="SelectModel_Click"
                                                Background="#238636" Foreground="White" BorderThickness="0"
                                                Padding="12,8" FontWeight="SemiBold" FontSize="11"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <TextBlock Text="LMSTUDIO MODELS" FontSize="18" FontWeight="Bold" Foreground="#1F6FEB" Margin="0,0,0,15"/>
                <ItemsControl x:Name="LMStudioModelsList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#161B22" BorderBrush="#30363D" BorderThickness="1"
                                    CornerRadius="6" Margin="0,0,0,10" Padding="15">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="{Binding Name}" FontSize="16" FontWeight="SemiBold" Foreground="#E6EDF3"/>
                                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                                        <Button Content="â­ SET PRIMARY" Click="SetAsPrimary_Click"
                                                Background="#D29922" Foreground="White" BorderThickness="0"
                                                Padding="12,8" Margin="0,0,8,0" FontWeight="SemiBold" FontSize="11"/>
                                        <Button Content="âœ“ SELECT" Tag="{Binding Name}" Click="SelectModel_Click"
                                                Background="#1F6FEB" Foreground="White" BorderThickness="0"
                                                Padding="12,8" FontWeight="SemiBold" FontSize="11"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
