<UserControl x:Class="OpenClawGUI.Pages.SettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             Background="#0D1117">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <TextBlock Text="SETTINGS" FontSize="24" FontWeight="Bold" Foreground="#E6EDF3" Margin="0,0,0,10"/>
            <TextBlock Text="Configure OpenClaw gateway and preferences" FontSize="14" Foreground="#7D8590" Margin="0,0,0,30"/>

            <Border Background="#161B22" BorderBrush="#30363D" BorderThickness="1" CornerRadius="6" Padding="20" Margin="0,0,0,15">
                <StackPanel>
                    <TextBlock Text="GATEWAY" FontSize="16" FontWeight="Bold" Foreground="#58A6FF" Margin="0,0,0,15"/>
                    
                    <TextBlock Text="Gateway URL" Foreground="#C9D1D9" Margin="0,0,0,5"/>
                    <TextBox x:Name="GatewayUrlInput" Text="http://127.0.0.1:18789"
                             Background="#0D1117" Foreground="#E6EDF3" BorderBrush="#30363D"
                             Padding="10" Margin="0,0,0,15"/>

                    <TextBlock Text="Auth Token" Foreground="#C9D1D9" Margin="0,0,0,5"/>
                    <TextBox x:Name="AuthTokenInput"
                             Background="#0D1117" Foreground="#E6EDF3" BorderBrush="#30363D"
                             Padding="10" Margin="0,0,0,15"/>

                    <Button Content="ðŸ’¾ SAVE GATEWAY SETTINGS" Click="SaveGateway_Click"
                            Background="#238636" Foreground="White" BorderThickness="0"
                            Padding="15,10" FontWeight="SemiBold" FontSize="13" HorizontalAlignment="Left"/>
                </StackPanel>
            </Border>

            <Border Background="#161B22" BorderBrush="#30363D" BorderThickness="1" CornerRadius="6" Padding="20" Margin="0,0,0,15">
                <StackPanel>
                    <TextBlock Text="PATHS" FontSize="16" FontWeight="Bold" Foreground="#58A6FF" Margin="0,0,0,15"/>
                    
                    <TextBlock Text="OpenClaw Directory" Foreground="#C9D1D9" Margin="0,0,0,5"/>
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="OpenClawPathInput" Grid.Column="0"
                                 Background="#0D1117" Foreground="#E6EDF3" BorderBrush="#30363D" Padding="10"/>
                        <Button Grid.Column="1" Content="ðŸ“" Click="BrowseOpenClaw_Click"
                                Background="#21262D" Foreground="#C9D1D9" BorderBrush="#30363D"
                                Padding="10" Margin="5,0,0,0"/>
                    </Grid>

                    <TextBlock Text="pnpm Path" Foreground="#C9D1D9" Margin="0,0,0,5"/>
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="PnpmPathInput" Grid.Column="0"
                                 Background="#0D1117" Foreground="#E6EDF3" BorderBrush="#30363D" Padding="10"/>
                        <Button Grid.Column="1" Content="ðŸ“" Click="BrowsePnpm_Click"
                                Background="#21262D" Foreground="#C9D1D9" BorderBrush="#30363D"
                                Padding="10" Margin="5,0,0,0"/>
                    </Grid>

                    <Button Content="ðŸ’¾ SAVE PATHS" Click="SavePaths_Click"
                            Background="#238636" Foreground="White" BorderThickness="0"
                            Padding="15,10" FontWeight="SemiBold" FontSize="13" HorizontalAlignment="Left"/>
                </StackPanel>
            </Border>

            <Border Background="#161B22" BorderBrush="#30363D" BorderThickness="1" CornerRadius="6" Padding="20">
                <StackPanel>
                    <TextBlock Text="ACTIONS" FontSize="16" FontWeight="Bold" Foreground="#58A6FF" Margin="0,0,0,15"/>
                    
                    <Button Content="ðŸ“ OPEN CONFIG FILE" Click="OpenConfig_Click"
                            Background="#21262D" Foreground="#C9D1D9" BorderBrush="#30363D" BorderThickness="1"
                            Padding="15,10" Margin="0,0,0,10" FontWeight="SemiBold" FontSize="13" HorizontalAlignment="Left"/>
                    
                    <Button Content="ðŸŒ OPEN WEB UI" Click="OpenWebUI_Click"
                            Background="#21262D" Foreground="#C9D1D9" BorderBrush="#30363D" BorderThickness="1"
                            Padding="15,10" FontWeight="SemiBold" FontSize="13" HorizontalAlignment="Left"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
