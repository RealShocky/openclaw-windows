<UserControl x:Class="OpenClawGUI.Pages.AgentsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             Background="#0D1117"
             Loaded="Page_Loaded">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="AGENTS" FontSize="24" FontWeight="Bold" Foreground="#E6EDF3" Margin="0,0,0,5"/>
            <TextBlock Text="View and manage running AI agents" FontSize="14" Foreground="#7D8590" Margin="0,0,0,20"/>
            
            <StackPanel Orientation="Horizontal">
                <Button Content="ðŸ”„ REFRESH" Click="Refresh_Click"
                        Background="#238636" Foreground="White" BorderThickness="0"
                        Padding="15,10" Margin="0,0,10,0" FontWeight="SemiBold" FontSize="13"/>
                <Button Content="âž• NEW AGENT" Click="NewAgent_Click"
                        Background="#1F6FEB" Foreground="White" BorderThickness="0"
                        Padding="15,10" FontWeight="SemiBold" FontSize="13"/>
            </StackPanel>
        </StackPanel>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Agent Cards -->
                <ItemsControl x:Name="AgentsList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#161B22" BorderBrush="#30363D" BorderThickness="1"
                                    CornerRadius="8" Margin="0,0,0,15" Padding="20">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Header -->
                                    <Grid Grid.Row="0" Margin="0,0,0,15">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                                            <TextBlock Text="ðŸ¤–" FontSize="24" Margin="0,0,10,0"/>
                                            <StackPanel>
                                                <TextBlock Text="{Binding Name}" FontSize="18" FontWeight="Bold" Foreground="#E6EDF3"/>
                                                <TextBlock Text="{Binding SessionId}" FontSize="12" Foreground="#7D8590"/>
                                            </StackPanel>
                                        </StackPanel>
                                        <Border Grid.Column="1" Background="{Binding StatusColor}" CornerRadius="4" Padding="10,5">
                                            <TextBlock Text="{Binding Status}" Foreground="White" FontSize="11" FontWeight="SemiBold"/>
                                        </Border>
                                    </Grid>

                                    <!-- Info -->
                                    <Grid Grid.Row="1" Margin="0,0,0,15">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="Model" FontSize="11" Foreground="#7D8590"/>
                                            <TextBlock Text="{Binding Model}" FontSize="13" Foreground="#58A6FF" FontWeight="SemiBold"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="Messages" FontSize="11" Foreground="#7D8590"/>
                                            <TextBlock Text="{Binding MessageCount}" FontSize="13" Foreground="#E6EDF3" FontWeight="SemiBold"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="2">
                                            <TextBlock Text="Started" FontSize="11" Foreground="#7D8590"/>
                                            <TextBlock Text="{Binding StartTime}" FontSize="13" Foreground="#E6EDF3"/>
                                        </StackPanel>
                                    </Grid>

                                    <!-- Actions -->
                                    <StackPanel Grid.Row="2" Orientation="Horizontal">
                                        <Button Content="ðŸ’¬ Open Chat" Tag="{Binding SessionId}" Click="OpenChat_Click"
                                                Background="#21262D" Foreground="#C9D1D9" BorderBrush="#30363D" BorderThickness="1"
                                                Padding="12,8" Margin="0,0,10,0" FontSize="12"/>
                                        <Button Content="ðŸ“‹ View Logs" Tag="{Binding SessionId}" Click="ViewLogs_Click"
                                                Background="#21262D" Foreground="#C9D1D9" BorderBrush="#30363D" BorderThickness="1"
                                                Padding="12,8" Margin="0,0,10,0" FontSize="12"/>
                                        <Button Content="â¹ Stop" Tag="{Binding SessionId}" Click="StopAgent_Click"
                                                Background="#21262D" Foreground="#DA3633" BorderBrush="#30363D" BorderThickness="1"
                                                Padding="12,8" FontSize="12"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Empty State -->
                <Border x:Name="EmptyState" Background="#161B22" BorderBrush="#30363D" BorderThickness="1"
                        CornerRadius="8" Padding="40" HorizontalAlignment="Center">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="ðŸ¤–" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                        <TextBlock Text="No Active Agents" FontSize="18" FontWeight="Bold" Foreground="#E6EDF3" 
                                   HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        <TextBlock Text="Start a conversation to create an agent" FontSize="14" Foreground="#7D8590"
                                   HorizontalAlignment="Center" Margin="0,0,0,20"/>
                        <Button Content="ðŸ’¬ Start Chat" Click="StartChat_Click"
                                Background="#238636" Foreground="White" BorderThickness="0"
                                Padding="20,10" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
