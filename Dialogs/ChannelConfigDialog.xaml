<Window x:Class="OpenClawGUI.Dialogs.ChannelConfigDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        Title="Configure Channel" 
        Height="500" Width="500"
        WindowStartupLocation="CenterOwner"
        Background="#0D1117"
        ResizeMode="NoResize">
    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock x:Name="ChannelIcon" Text="ðŸ’¬" FontSize="32" Margin="0,0,15,0"/>
                <StackPanel>
                    <TextBlock x:Name="ChannelTitle" Text="Configure Discord" FontSize="20" FontWeight="Bold" Foreground="#E6EDF3"/>
                    <TextBlock x:Name="ChannelSubtitle" Text="Enter your bot credentials" FontSize="12" Foreground="#7D8590"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>

        <!-- Form Fields -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="FormFields">
                <!-- Discord Fields -->
                <StackPanel x:Name="DiscordFields">
                    <TextBlock Text="Bot Token *" Foreground="#E6EDF3" FontWeight="SemiBold" Margin="0,0,0,8"/>
                    <TextBox x:Name="BotTokenInput" 
                             Background="#161B22" Foreground="#E6EDF3" BorderBrush="#30363D" 
                             Padding="12" Margin="0,0,0,5"
                             ui:ControlHelper.PlaceholderText="Enter your Discord bot token"/>
                    <TextBlock Text="Get this from Discord Developer Portal â†’ Bot â†’ Token" Foreground="#7D8590" FontSize="11" Margin="0,0,0,20"/>

                    <TextBlock Text="Application ID" Foreground="#E6EDF3" FontWeight="SemiBold" Margin="0,0,0,8"/>
                    <TextBox x:Name="AppIdInput" 
                             Background="#161B22" Foreground="#E6EDF3" BorderBrush="#30363D" 
                             Padding="12" Margin="0,0,0,5"
                             ui:ControlHelper.PlaceholderText="Optional - for slash commands"/>
                    <TextBlock Text="Found in Discord Developer Portal â†’ General Information" Foreground="#7D8590" FontSize="11" Margin="0,0,0,20"/>

                    <TextBlock Text="Guild ID (Server ID)" Foreground="#E6EDF3" FontWeight="SemiBold" Margin="0,0,0,8"/>
                    <TextBox x:Name="GuildIdInput" 
                             Background="#161B22" Foreground="#E6EDF3" BorderBrush="#30363D" 
                             Padding="12" Margin="0,0,0,5"
                             ui:ControlHelper.PlaceholderText="Optional - limit to specific server"/>
                    <TextBlock Text="Right-click server â†’ Copy Server ID (enable Developer Mode first)" Foreground="#7D8590" FontSize="11" Margin="0,0,0,20"/>
                </StackPanel>

                <!-- Slack Fields -->
                <StackPanel x:Name="SlackFields" Visibility="Collapsed">
                    <TextBlock Text="Bot Token *" Foreground="#E6EDF3" FontWeight="SemiBold" Margin="0,0,0,8"/>
                    <TextBox x:Name="SlackBotTokenInput" 
                             Background="#161B22" Foreground="#E6EDF3" BorderBrush="#30363D" 
                             Padding="12" Margin="0,0,0,5"
                             ui:ControlHelper.PlaceholderText="xoxb-your-bot-token"/>
                    <TextBlock Text="OAuth &amp; Permissions â†’ Bot User OAuth Token" Foreground="#7D8590" FontSize="11" Margin="0,0,0,20"/>

                    <TextBlock Text="Signing Secret *" Foreground="#E6EDF3" FontWeight="SemiBold" Margin="0,0,0,8"/>
                    <TextBox x:Name="SlackSigningSecretInput" 
                             Background="#161B22" Foreground="#E6EDF3" BorderBrush="#30363D" 
                             Padding="12" Margin="0,0,0,5"
                             ui:ControlHelper.PlaceholderText="Your app's signing secret"/>
                    <TextBlock Text="Basic Information â†’ App Credentials â†’ Signing Secret" Foreground="#7D8590" FontSize="11" Margin="0,0,0,20"/>

                    <TextBlock Text="App Token" Foreground="#E6EDF3" FontWeight="SemiBold" Margin="0,0,0,8"/>
                    <TextBox x:Name="SlackAppTokenInput" 
                             Background="#161B22" Foreground="#E6EDF3" BorderBrush="#30363D" 
                             Padding="12" Margin="0,0,0,5"
                             ui:ControlHelper.PlaceholderText="xapp-your-app-token (for Socket Mode)"/>
                    <TextBlock Text="Basic Information â†’ App-Level Tokens" Foreground="#7D8590" FontSize="11" Margin="0,0,0,20"/>
                </StackPanel>

                <!-- Telegram Fields -->
                <StackPanel x:Name="TelegramFields" Visibility="Collapsed">
                    <TextBlock Text="Bot Token *" Foreground="#E6EDF3" FontWeight="SemiBold" Margin="0,0,0,8"/>
                    <TextBox x:Name="TelegramTokenInput" 
                             Background="#161B22" Foreground="#E6EDF3" BorderBrush="#30363D" 
                             Padding="12" Margin="0,0,0,5"
                             ui:ControlHelper.PlaceholderText="123456789:ABCdefGHIjklMNOpqrsTUVwxyz"/>
                    <TextBlock Text="Get this from @BotFather on Telegram" Foreground="#7D8590" FontSize="11" Margin="0,0,0,20"/>

                    <TextBlock Text="Allowed Users (Optional)" Foreground="#E6EDF3" FontWeight="SemiBold" Margin="0,0,0,8"/>
                    <TextBox x:Name="TelegramAllowedUsersInput" 
                             Background="#161B22" Foreground="#E6EDF3" BorderBrush="#30363D" 
                             Padding="12" Margin="0,0,0,5"
                             ui:ControlHelper.PlaceholderText="Comma-separated user IDs"/>
                    <TextBlock Text="Leave empty to allow all users" Foreground="#7D8590" FontSize="11" Margin="0,0,0,20"/>
                </StackPanel>

                <!-- Generic Fields for other channels -->
                <StackPanel x:Name="GenericFields" Visibility="Collapsed">
                    <TextBlock Text="API Token / Key *" Foreground="#E6EDF3" FontWeight="SemiBold" Margin="0,0,0,8"/>
                    <TextBox x:Name="GenericTokenInput" 
                             Background="#161B22" Foreground="#E6EDF3" BorderBrush="#30363D" 
                             Padding="12" Margin="0,0,0,20"
                             ui:ControlHelper.PlaceholderText="Enter your API token"/>

                    <TextBlock Text="Additional Config (JSON)" Foreground="#E6EDF3" FontWeight="SemiBold" Margin="0,0,0,8"/>
                    <TextBox x:Name="GenericConfigInput" 
                             Background="#161B22" Foreground="#E6EDF3" BorderBrush="#30363D" 
                             Padding="12" Height="100" AcceptsReturn="True" TextWrapping="Wrap"
                             ui:ControlHelper.PlaceholderText="Optional JSON config"/>
                </StackPanel>

                <!-- Help Link -->
                <Border Background="#161B22" BorderBrush="#30363D" BorderThickness="1" CornerRadius="6" Padding="15" Margin="0,10,0,0">
                    <StackPanel>
                        <TextBlock Text="ðŸ“– Need help?" Foreground="#58A6FF" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBlock x:Name="HelpText" Text="Visit the Discord Developer Portal to create a bot and get your token." 
                                   Foreground="#7D8590" TextWrapping="Wrap"/>
                        <Button x:Name="HelpLinkButton" Content="Open Setup Guide â†’" Click="OpenHelpLink_Click"
                                Background="Transparent" Foreground="#58A6FF" BorderThickness="0"
                                Padding="0" Margin="0,10,0,0" HorizontalAlignment="Left" Cursor="Hand"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Cancel" Click="Cancel_Click"
                    Background="#21262D" Foreground="#C9D1D9" BorderBrush="#30363D" BorderThickness="1"
                    Padding="20,10" Margin="0,0,10,0" FontWeight="SemiBold"/>
            <Button Content="ðŸ’¾ Save &amp; Restart Gateway" Click="SaveAndRestart_Click"
                    Background="#238636" Foreground="White" BorderThickness="0"
                    Padding="20,10" FontWeight="SemiBold"/>
        </StackPanel>
    </Grid>
</Window>
